<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="test_view_form" model="ir.ui.view">
            <field name="name">test_view_form</field>
            <field name="model">test.model</field>
            <field name="arch" type="xml">
                <form string="test" version="7.0">
				    <sheet>
				    	<field name="text_field" context="{'maxlines': 8, 'maxlength': 400}"/>
				    </sheet>
                </form>
            </field>
        </record>

        <record id="test_action" model="ir.actions.act_window">
            <field name="name">TEST</field>
            <field name="res_model">test.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="test_view_form"/>
        </record>

        <menuitem id="menu_test" name="TEST" action="test_action"/>

    </data>
</openerp>



